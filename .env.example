# Application
APP_NAME=Quero Plantão API
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/queroplantao

# Configurações de conexão otimizadas para Neon
NEON_POOL_SIZE=5
NEON_MAX_OVERFLOW=10
NEON_POOL_TIMEOUT=30
NEON_POOL_RECYCLE=3600
NEON_SSL_MODE=require
NEON_HIBERNATION_TIMEOUT=300
NEON_WARM_CONNECTIONS=true

# LavinMQ
LAVINMQ_URL=amqp://guest:guest@localhost:5672/
LAVINMQ_EXCHANGE=queroplantao
LAVINMQ_QUEUE_PREFIX=qp_

# JWT (Internal - from BFF)
JWT_SECRET_KEY=your-internal-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ISSUER=queroplantao-bff

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Firebase Authentication
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_BASE64=your-base64-encoded-firebase-credentials-json

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_USER_CACHE_TTL=1800
REDIS_ORG_CACHE_TTL=1800
REDIS_MEMBERSHIP_CACHE_TTL=900

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
